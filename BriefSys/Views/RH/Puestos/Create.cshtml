@model DataLayer.Models.PuestoVM

@{
    ViewBag.Title = "Crear Puesto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>@ViewBag.Title</h2>

    <form action="CreatePuesto" method="post">
        <div class="form-group">
            @Html.LabelFor(p => p.Puesto.IdPuesto)
            @Html.TextBoxFor(p => p.Puesto.IdPuesto, new { @class = "form-control", placeholder = "IdPuesto" })
            @Html.ValidationMessageFor(p => p.Puesto.IdPuesto, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(p => p.Puesto.IdDepartamento, Model.ListaDepartamentos,
           "~Selecciona departamento~", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Puesto.Clasificacion)
            @Html.TextBoxFor(p => p.Puesto.Clasificacion, new { @class = "form-control", placeholder = "Clasificación" })
            @Html.ValidationMessageFor(p => p.Puesto.Clasificacion, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Puesto.Descripcion)
            @Html.TextBoxFor(p => p.Puesto.Descripcion, new { @class = "form-control", placeholder = "Descripción" })
            @Html.ValidationMessageFor(p => p.Puesto.Descripcion, null, new { @class = "text-danger" })
        </div>
        <a class="btn btn-primary" href="@Url.Action("Puestos","RH")">Regresar</a>
        <input type="submit" value="Añadir puesto" class="btn btn-success" />
    </form>
</div>