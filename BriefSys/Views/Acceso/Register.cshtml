@model BriefSys.Models.Acceso.Acceso_UsuarioVM

@{
    ViewBag.Title = "Registrarse";
}

<div>
    <h2>@ViewBag.Title</h2>

    <form action="Register" method="post" enctype="multipart/form-data">
        <div class="form-group">
            @Html.DropDownListFor(u => u.Acceso_Usuario.IdEmp, Model.ListaEmpleados,
           "~Selecciona empleado~", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.Acceso_Usuario.UsuarioId)
            @Html.TextBoxFor(u => u.Acceso_Usuario.UsuarioId, new { @class = "form-control", placeholder = "Usuario" })
            @Html.ValidationMessageFor(u => u.Acceso_Usuario.UsuarioId, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.Acceso_Usuario.Password)
            @Html.PasswordFor(u => u.Acceso_Usuario.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(u => u.Acceso_Usuario.Password, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.Label("Imagen")
            @Html.TextBoxFor(u => u.File, new { type = "file" })
        </div>
        <input type="submit" value="Registrarse" class="btn btn-primary" />
    </form>

