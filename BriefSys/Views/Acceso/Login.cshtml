@model DataLayer.Models.Acceso_Usuario

@{
    ViewBag.Title = "Iniciar Sesión";
}

<div>
    <h2>@ViewBag.Title</h2>

    <form action="Login" method="post">
        <div class="form-group">
            @Html.LabelFor(u => u.UsuarioId)
            @Html.TextBoxFor(u => u.UsuarioId, new { @class = "form-control", placeholder = "Usuario" })
            @Html.ValidationMessageFor(u => u.UsuarioId, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.Password)
            @Html.PasswordFor(u => u.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(u => u.Password, null, new { @class = "text-danger" })
        </div>
        <input type="submit" value="Iniciar Sesión" class="btn btn-primary" />
    </form>

</div>